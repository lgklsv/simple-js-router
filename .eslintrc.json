{
  "plugins": ["prettier", "import"],
  "extends": [
    "airbnb/base",
    "plugin:prettier/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "root": true,
  "rules": {
    "import/no-unresolved": "error",
    "no-debugger": "off",
    "no-console": 0,
    "class-methods-use-this": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "global-require": "off"
  }
}
